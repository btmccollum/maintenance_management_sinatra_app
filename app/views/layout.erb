  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Management</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/main.css" />
  </head>
  <body class="bg-light">

    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <a href="/" class="navbar-brand d-flex align-items-center my-0 mr-md-auto">
        <img src="/assets/logo.png" class="mr-2" style="max-height: 32px;" />
        <h5 class="font-weight-normal" style="position: relative; top: 4px;">Management</h5>
      </a>
      
      <% if logged_in? %>
        <nav class="my-2  my-md-0 mr-md-3">        
          <a class="p-2 text-dark" href="/equipment">Equipment</a>     
          <a class="p-2 text-dark" href="/maintenances">Maintenances</a>             
          <a class="p-2 text-dark" href="/users/<%= current_user.id %>">Profile</a>        
        </nav>     
        
        <a class="btn btn-outline-primary" href="/logout">Logout</a>
      <% else %>
        <a class="btn btn-outline-primary mr-sm-2" href="/signup">Sign Up</a>
        <a class="btn btn-outline-secondary " href="/login">Login</a>        
      <% end %>  
      
    </div>  

    <div class="container">
      <div class="container">      
        <%= yield %>     
      </div>

      <footer class="pt-4 my-md-5 pt-md-2 border-top">
        <div class="row">
          <div class="col-12 col-md">
            <span class="mb-2">Maintenance Management</span>
            <small class="d-block mb-3 text-muted">&copy; 2018-2019</small>
          </div>          
        </div>        
      </footer>
    </div>

